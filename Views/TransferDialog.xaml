<Window x:Class="AccountTransferApp.Views.TransferDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Transfer" Height="150" Width="300">
    <Grid>
        <TextBlock Text="Are you sure you want to complete this transfer?" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Click="OnOkButtonClick" Width="80" Margin="5"/>
            <Button Content="Cancel" Click="OnCancelButtonClick" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>